{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "minLength": 1
    },
    "lamport": {
      "type": "number",
      "minimum": 0
    },
    "payload": {
      "type": "object"
    },
    "prev_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "required": ["type", "lamport", "payload", "prev_hash"],
  "additionalProperties": false
}