{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "lamport": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["id", "hash", "ts", "lamport"],
  "additionalProperties": false
}