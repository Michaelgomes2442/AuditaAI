{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "tsx server.js",
    "dev": "tsx --watch server.js",
    "migrate": "pnpm exec prisma migrate dev",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d && sleep 5 && pnpm run migrate",
    "build": "pnpm exec prisma generate && echo 'Build complete'",
    "postinstall": "pnpm exec prisma generate && node ./scripts/postinstall-copy-prisma-client.cjs || true && node ./scripts/postinstall-copy-to-build.cjs || true && node ./scripts/check_prisma-artifacts.cjs || true",
    "test": "vitest run --dir src --reporter verbose",
    "test:api": "mocha test/api-tests.js --timeout 10000",
    "test:all": "pnpm run test:api && pnpm run test",
    "test:prisma-optimize": "tsx test-prisma-optimize.ts",
    "ben-stub": "node ./mocks/ben-stub.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@prisma/client": "^6.18.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@prisma/extension-optimize": "^2.0.0",
    "@prisma/instrumentation": "^6.18.0",
    "@types/socket.io": "^3.0.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.6.0",
    "multer": "^2.0.0",
    "natural": "^8.1.0",
    "openai": "^6.6.0",
    "prisma": "^6.18.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "playwright": "^1.56.1",
    "ts-mocha": "^11.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
